# MongoDB Configuration - IMPORTANTE
# Reemplaza USERNAME y PASSWORD con tus credenciales
# NUNCA incluyas credenciales reales en este archivo
MONGODB_URI=mongodb+srv://USERNAME:PASSWORD@cluster.mongodb.net/arc_raiders?retryWrites=true&w=majority&appName=Arc001
DB_NAME=arc_raiders

# Server Configuration
PORT=10000
NODE_ENV=development

# JWT Authentication
# IMPORTANTE: Genera un JWT_SECRET único y fuerte en producción
# Ejemplo: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long

# CORS Configuration
# Desarrollo: localhost
# Producción: dominios reales
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://127.0.0.1:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
